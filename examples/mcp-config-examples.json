{
  "comment": "Example MCP configurations for Claude Code",
  
  "example1_basic": {
    "description": "Basic configuration - all bookmarks",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark"
        }
      }
    }
  },

  "example2_profile_and_folder": {
    "description": "Use specific Chrome profile and folder",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "args": ["--profile", "Nakamura", "--folder", "hoge"]
        }
      }
    }
  },

  "example3_environment_variables": {
    "description": "Configure via environment variables",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "env": {
            "CHROME_PROFILE_NAME": "Nakamura",
            "CHROME_TARGET_FOLDER": "hoge"
          }
        }
      }
    }
  },

  "example4_legacy_profile": {
    "description": "Legacy profile directory specification",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "env": {
            "CHROME_PROFILE": "Profile 1"
          }
        }
      }
    }
  },

  "example5_folder_filtering": {
    "description": "Include specific folders with limit",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "args": ["Development,Work", "50"]
        }
      }
    }
  },

  "example6_exclude_folders": {
    "description": "Exclude certain folders",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "args": ["--exclude", "Personal,Archive"]
        }
      }
    }
  },

  "example7_combined": {
    "description": "Combine profile, folder, and limits",
    "config": {
      "mcpServers": {
        "chrome-bookmarks": {
          "command": "mcp-bookmark",
          "args": ["--profile", "Nakamura", "--folder", "hoge"],
          "env": {
            "RUST_LOG": "info"
          }
        }
      }
    }
  }
}