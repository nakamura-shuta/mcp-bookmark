{
  "manifest_version": 3,
  "name": "Bookmark Indexer",
  "version": "1.0.0",
  "description": "Index bookmark content to local Tantivy search engine",
  
  "permissions": [
    "nativeMessaging",
    "bookmarks",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}