{
  "manifest_version": 3,
  "name": "Bookmark Indexer",
  "version": "1.0.0",
  "description": "Index bookmark content to local Tantivy search engine",
  
  "permissions": [
    "nativeMessaging",
    "bookmarks",
    "tabs",
    "scripting",
    "offscreen"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  }
}