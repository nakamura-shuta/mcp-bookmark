{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Release",
      "type": "cargo",
      "command": "build",
      "args": ["--release"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug",
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "cargo",
      "command": "test",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "MCP Inspector CLI",
      "type": "shell",
      "command": "npx mcp-inspector ./target/release/mcp-bookmark",
      "dependsOn": ["Build Release"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "MCP Inspector WebUI",
      "type": "shell",
      "command": "npx mcp-inspector --ui --port 8080 ./target/release/mcp-bookmark",
      "dependsOn": ["Build Release"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Run MCP Tests",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "Run MCP Tests (Debug)",
      "type": "npm",
      "script": "test:debug",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "Watch & Build",
      "type": "shell",
      "command": "cargo watch -x 'build --release'",
      "problemMatcher": ["$rustc"],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Clean Build",
      "type": "cargo",
      "command": "clean",
      "problemMatcher": []
    },
    {
      "label": "Format Code",
      "type": "cargo",
      "command": "fmt",
      "problemMatcher": []
    },
    {
      "label": "Clippy Check",
      "type": "cargo",
      "command": "clippy",
      "problemMatcher": ["$rustc"]
    }
  ]
}